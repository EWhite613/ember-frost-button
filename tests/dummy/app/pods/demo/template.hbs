{{#frost-tabs class=(if iframe 'iframe') on-change=(action 'tabSelected') selection=selectedTab}}
	{{#frost-tab alias='Readme' id='readme'}}
        <div id=‘content’>
          {{#frost-docs 'frost-button'}}
            {{#frost-docs-api}}
              {{#frost-docs-api-category 'actions'}}
                {{frost-docs-api-attribute 'on-click' 'triggers associated action'}}
              {{/frost-docs-api-category}}

              {{#frost-docs-api-category 'css (content)'}}
                {{frost-docs-api-css 'icon' 'icon is part of the button'}}
                {{frost-docs-api-css 'icon-text' 'icon and text are part of the button'}}
                {{frost-docs-api-css 'info' 'additional info is part of the button'}}
                {{frost-docs-api-css 'text' 'text is part of the button'}}
              {{/frost-docs-api-category}}

              {{#frost-docs-api-category 'css (size)'}}
                {{frost-docs-api-css 'small' 'small link button'}}
                {{frost-docs-api-css 'medium' 'medium link button'}}
                {{frost-docs-api-css 'large' 'large link button'}}
                {{frost-docs-api-css 'extra-large' 'extra-large link button'}}
              {{/frost-docs-api-category}}

              {{#frost-docs-api-category 'css (type)'}}
                {{frost-docs-api-css 'primary' 'primary link button'}}
                {{frost-docs-api-css 'secondary' 'secondary link button'}}
                {{frost-docs-api-css 'tertriary' 'tertiary link button'}}
              {{/frost-docs-api-category}}

              {{#frost-docs-api-category 'states'}}
                {{frost-docs-api-attribute 'autofocus' 'autofocus on the element'}}
                {{frost-docs-api-attribute 'disabled' 'disabled element'}}
              {{/frost-docs-api-category}}

            {{/frost-docs-api}}

            {{#frost-docs-examples}}
              {{frost-docs-example text}}
              {{frost-docs-example icon}}
              {{frost-docs-example icontext}}
              {{frost-docs-example info1}}
            {{/frost-docs-examples}}

            {{#frost-docs-changelog}}
              {{frost-docs-changelog-entry '1.1.3' "Initial version"}}
            {{/frost-docs-changelog}}
          {{/frost-docs}}
        </div>
	{{/frost-tab}}
